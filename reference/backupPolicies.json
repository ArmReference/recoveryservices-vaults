{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.1",
  "parameters": {
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 150,
      "metadata": {
        "description": "Resource name associated with the resource."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Resource location."
      }
    },
    "tags": {
      "type": "object",
      "metadata": {
        "description": "Resource tags."
      }
    },
    "eTag": {
      "type": "string",
      "metadata": {
        "description": "Optional ETag."
      }
    },
    "properties": {
      "type": "object",
      "metadata": {
        "description": "Base class for backup policy. Workload-specific backup policies are derived from this class."
      }
    },
    "DependsOn": {
      "type": "array",
      "defaultValue": [],
      "metadata": {
        "description": "Pass dependencies"
      }
    }
  },
  "variables": {
    "comment": {
      "definition": "https://docs.microsoft.com/en-us/rest/api/backup/protection-policies/create-or-update"
    },
    "backupPolicies": {
      "type": "Microsoft.RecoveryServices/vaults/backupPolicies",
      "apiVersion": "2021-12-01",
      "dependsOn": "[if(empty(parameters('DependsOn')),json('null'),parameters('DependsOn'))]",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "eTag": "[parameters('eTag')]",
      "properties": "[parameters('properties')]"
    }
  },
  "resources": [
  ],
  "outputs": {
    "backupPolicies": {
      "type": "object",
      "value": "[variables('backupPolicies')]"
    }
  }
}