{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.4",
  "parameters": {
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 50,
      "metadata": {
        "description": "The name of the recovery services vault."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Resource location."
      }
    },
    "sku": {
      "type": "object",
      "metadata": {
        "description": "Identifies the unique system identifier for each Azure resource."
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Resource tags."
      }
    },
    "identity": {
      "type": "object",
      "defaultValue": {}
    },
    "VaultProperties": {
      "type": "object",
      "defaultValue":{},
      "metadata": {
        "description": "Customer Managed Key details of the resource."
      }
    },
    "DependsOn": {
      "type": "array",
      "defaultValue": [],
      "metadata": {
        "description": "Pass dependencies"
      }
    }
  },
  "variables": {
    "vaults": {
      "type": "Microsoft.RecoveryServices/vaults",
      "apiVersion": "2021-08-01",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "dependsOn": "[if(empty(parameters('DependsOn')),json('null'),parameters('DependsOn'))]",
      "sku": "[parameters('sku')]",
      "properties": {
        "encryption": "[parameters('VaultProperties')]"
      },
      "identity": "[parameters('identity')]",
      "tags": "[parameters('tags')]"
    }
  },
  "resources": [
  ],
  "outputs": {
    "vaults": {
      "type": "object",
      "value": "[variables('vaults')]"
    }
  }
}